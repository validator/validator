    SVG.Script.class
  </a:documentation>

  <define name="SVG.Script.extra.class">
    <notAllowed/>
  </define>

  <define name="SVG.Script.class" combine="choice">
    <choice>
      <ref name="script"/>
      <ref name="SVG.Script.extra.class"/>
    </choice>
  </define>

