<?xml version="1.0" encoding="UTF-8"?>
<grammar ns="http://www.thaiopensource.com/ns/mns" xmlns="http://relaxng.org/ns/structure/1.0" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
  <start>
    <element name="rules">
      <optional>
        <attribute name="startMode">
          <ref name="mode"/>
        </attribute>
      </optional>
      <interleave>
        <zeroOrMore>
          <choice>
            <ref name="validate"/>
            <ref name="process"/>
          </choice>
        </zeroOrMore>
        <ref name="foreign"/>
      </interleave>
    </element>
  </start>
  <define name="validate">
    <choice>
      <element name="validate">
        <ref name="validateModel"/>
        <optional>
          <ref name="useModeAtt"/>
        </optional>
        <optional>
          <attribute name="prune">
            <choice>
              <value>true</value>
              <value>false</value>
            </choice>
          </attribute>
        </optional>
        <interleave>
          <group>
            <zeroOrMore>
              <ref name="cover"/>
            </zeroOrMore>
            <zeroOrMore>
              <ref name="context"/>
            </zeroOrMore>
          </group>
          <ref name="foreign"/>
        </interleave>
      </element>
      <element name="validateAttributes">
        <interleave>
          <ref name="validateModel"/>
          <ref name="foreign"/>
        </interleave>
      </element>
    </choice>
  </define>
  <define name="cover">
    <element name="cover">
      <interleave>
        <ref name="nsAtt"/>
        <ref name="foreign"/>
      </interleave>
    </element>
  </define>
  <define name="context">
    <element name="context">
      <optional>
        <ref name="useModeAtt"/>
      </optional>
      <optional>
        <ref name="nsAtt"/>
      </optional>
      <interleave>
        <oneOrMore>
          <choice>
            <ref name="rootContext"/>
            <ref name="elementContext"/>
          </choice>
        </oneOrMore>
        <ref name="foreign"/>
      </interleave>
    </element>
  </define>
  <define name="rootContext">
    <element name="root">
      <optional>
        <ref name="nsAtt"/>
      </optional>
      <interleave>
        <ref name="elementContext"/>
        <ref name="foreign"/>
      </interleave>
    </element>
  </define>
  <define name="elementContext">
    <element name="element">
      <optional>
        <ref name="nsAtt"/>
      </optional>
      <attribute name="name">
        <data type="NCName"/>
      </attribute>
      <interleave>
        <optional>
          <ref name="elementContext"/>
        </optional>
        <ref name="foreign"/>
      </interleave>
    </element>
  </define>
  <define name="process">
    <element>
      <choice>
        <name>lax</name>
        <name>strict</name>
        <name>laxAttributes</name>
        <name>strictAttributes</name>
      </choice>
      <interleave>
        <optional>
          <ref name="modesAtt"/>
        </optional>
        <ref name="foreign"/>
      </interleave>
    </element>
  </define>
  <define name="validateModel">
    <ref name="nsAtt"/>
    <attribute name="schema">
      <data type="anyURI"/>
    </attribute>
    <optional>
      <ref name="modesAtt"/>
    </optional>
  </define>
  <define name="nsAtt">
    <attribute name="ns">
      <data type="anyURI"/>
    </attribute>
  </define>
  <define name="useModeAtt">
    <attribute name="useMode">
      <ref name="mode"/>
    </attribute>
  </define>
  <define name="modesAtt">
    <attribute name="modes">
      <list>
        <oneOrMore>
          <ref name="mode"/>
        </oneOrMore>
      </list>
    </attribute>
  </define>
  <define name="mode">
    <choice>
      <data type="NCName"/>
      <value>#default</value>
    </choice>
  </define>
  <define name="foreign">
    <zeroOrMore>
      <choice>
        <attribute>
          <anyName>
            <except>
              <nsName/>
              <nsName ns=""/>
            </except>
          </anyName>
        </attribute>
        <element>
          <anyName>
            <except>
              <nsName/>
            </except>
          </anyName>
          <ref name="anything"/>
        </element>
      </choice>
    </zeroOrMore>
  </define>
  <define name="anything">
    <zeroOrMore>
      <choice>
        <text/>
        <attribute>
          <anyName/>
        </attribute>
        <element>
          <anyName/>
          <ref name="anything"/>
        </element>
      </choice>
    </zeroOrMore>
  </define>
</grammar>
